<%= form_tag charges_path do %>
<% if current_user.role == "standard" %>
   <h4>Gain access to private wikis for only $15.00</h4>
   <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="<%= @stripe_btn_data[:key] %>" data-amount="<%= @stripe_btn_data[:amount] %>" data-description="<%= @stripe_btn_data[:description] %>" ></script>
 <% else %>
 <h4>Are you sure you want to revert from premium back to standard?</h4>
      <%= link_to "Cancel Premium", downgrade_charge_path, class: "btn btn-danger" %>
   <% end %>
 <% end %>
