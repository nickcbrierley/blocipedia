<div class="container">
 <div class='jumbotron'>
  <h1><%= @wiki.title %></h1>
 
  <div class="row">
    <div class="col">
      <p><%= markdown(@wiki.body) %></p>
      <small>last edited <%= time_ago_in_words(@wiki.updated_at) %> ago by <%= @wiki.user.email %></small>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn' %>
      <% if @wiki.user == current_user %>
          <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
          <%= link_to "Collaborate", new_wiki_collaborator_path(@wiki), class: 'btn' %>
      <% end %>
    </div>
    </div>
 </div>
 </div>