<div class="container">
 <div class='jumbotron'>
  <h1>Manange colaborators for <%= @wiki.title %></h1>
 
  <div class="row">
    <div class="col-md-6">
       <h3>Add Collaborators</h3>
       <% @users_currently_not_collaborating.each do |user| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= button_to "#{user.email}", {controller: "collaborators", action: "create", wiki_id: @wiki.id, user_id: user.id} , class: 'btn' %>  
            </h4>
         </div>
       </div>
       <% end %>
    </div>
    <div class="col-md-6">
       <h3>Current Collaborators</h3>
         <% @collaborating_users.each do |user| %>
         <div class="media">
           <div class="media-body">
             <h4 class="media-heading">
               <%= button_to "#{user.email}", [@wiki, @current_collaborators.find_by(user_id: user.id)], method: :delete, class: 'btn', data: { confirm: 'Are you sure you want to remove this colaborator?' } %>
             </h4>
           </div>
         </div>
         <% end %>
    </div>
  </div>
 </div>
</div>

